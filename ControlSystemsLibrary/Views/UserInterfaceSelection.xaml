<UserControl x:Class="ControlSystemsLibrary.Views.UserInterfaceSelection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ControlSystemsLibrary.Views" xmlns:controls="clr-namespace:ControlSystemsLibrary.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1440">
    <UserControl.Background>
        <SolidColorBrush Color="{DynamicResource Light-002}"/>
    </UserControl.Background>
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <controls:LoaderCubes/>
            <TextBlock Text="Здесь можно будет выбрать интерфейс пользователя" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="/ControlSystemsLibrary;component/Resources/Fonts/#Roboto" Margin="0,25,0,0">
                <TextBlock.Foreground>
                    <SolidColorBrush Color="{DynamicResource Blue-003}"/>
                </TextBlock.Foreground>
            </TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
