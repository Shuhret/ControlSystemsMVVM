<Window x:Class="ControlSystemsApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlSystemsApplication" 
        xmlns:mv="clr-namespace:ControlSystemsLibrary.ViewModels.MainWindowViewModel;assembly=ControlSystemsLibrary"
        mc:Ignorable="d"
        Style="{DynamicResource VS2012WindowStyle}"
        Title="MainWindow" Width="1200" Height="700" WindowStartupLocation="CenterScreen" MinWidth="1040" MinHeight="600" >

    <Window.DataContext>
        <mv:MainWindowVM/>
    </Window.DataContext>
    <Grid Background="#FFF9FAFC">
        <ContentControl Content="{Binding CurrentUserInterface, UpdateSourceTrigger=PropertyChanged}"/>
    </Grid>
</Window>
